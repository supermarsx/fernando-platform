# Proxy Integration Environment Configuration
# This file shows the environment variables needed for proxy integration

# ==============================================================================
# GLOBAL PROXY SETTINGS
# ==============================================================================
PROXY_ENABLED=true
PROXY_FALLBACK_ENABLED=true
PROXY_TIMEOUT=30
PROXY_MAX_RETRIES=3
PROXY_ENCRYPTION_ENABLED=true

# ==============================================================================
# LLM SERVICE PROXY (OpenAI, Anthropic, Local models)
# ==============================================================================
LLM_PROXY_ENDPOINT=http://localhost:8000
LLM_PROXY_ENABLED=true

# Remove these from client-side configuration:
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# ==============================================================================
# OCR SERVICE PROXY (PaddleOCR, Google Vision, Azure, AWS)
# ==============================================================================
OCR_PROXY_ENDPOINT=http://localhost:8001
OCR_PROXY_ENABLED=true

# Remove these from client-side configuration:
# OCR_API_KEY=your_ocr_key_here
# GOOGLE_VISION_API_KEY=your_google_vision_key_here
# AZURE_VISION_KEY=your_azure_vision_key_here
# AWS_ACCESS_KEY_ID=your_aws_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_here

# ==============================================================================
# TOCONLINE DOCUMENT EXTRACTION PROXY
# ==============================================================================
TOCONLINE_PROXY_ENDPOINT=http://localhost:8002
TOCONLINE_PROXY_ENABLED=true

# Remove these from client-side configuration:
# TOCONLINE_API_KEY=your_toconline_key_here

# ==============================================================================
# STRIPE PAYMENT PROXY
# ==============================================================================
STRIPE_PROXY_ENDPOINT=http://localhost:8003
STRIPE_PROXY_ENABLED=true

# Remove these from client-side configuration:
# STRIPE_SECRET_KEY=your_stripe_secret_key_here
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# ==============================================================================
# PAYPAL PAYMENT PROXY
# ==============================================================================
PAYPAL_PROXY_ENDPOINT=http://localhost:8004
PAYPAL_PROXY_ENABLED=true

# Remove these from client-side configuration:
# PAYPAL_CLIENT_ID=your_paypal_client_id_here
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ==============================================================================
# COINBASE CRYPTOCURRENCY PAYMENT PROXY
# ==============================================================================
COINBASE_PROXY_ENDPOINT=http://localhost:8005
COINBASE_PROXY_ENABLED=true

# Remove these from client-side configuration:
# COINBASE_COMMERCE_API_KEY=your_coinbase_api_key_here

# ==============================================================================
# OPENAI DIRECT PROXY
# ==============================================================================
OPENAI_PROXY_ENDPOINT=http://localhost:8006
OPENAI_PROXY_ENABLED=true

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
PROXY_API_KEY_HEADER=X-API-Key
PROXY_AUTH_TYPE=bearer
PROXY_REQUEST_SIGNING_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60

# ==============================================================================
# MONITORING AND OBSERVABILITY
# ==============================================================================
PROXY_TELEMETRY_ENABLED=true
PROXY_METRICS_ENABLED=true
PROXY_LOGGING_LEVEL=INFO

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
# Set these for development/testing
# DEV_PROXY_MOCK_RESPONSES=false
# DEV_PROXY_MOCK_DELAY=0
# DEV_PROXY_FORCE_FAILURE=false