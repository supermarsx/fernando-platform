# Frontend Environment Configuration
# Copy this file to .env.local and update the values

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_V1_STR=/api/v1
VITE_WS_URL=ws://localhost:8000

# Application Configuration
VITE_APP_NAME=Fernando
VITE_APP_VERSION=0.1.0
VITE_APP_DESCRIPTION=Automated Portuguese Invoice Processing

# Development Configuration
VITE_DEBUG=true
VITE_LOG_LEVEL=debug
VITE_DEV_TOOLS=true

# Feature Flags
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_DOCUMENT_PREVIEW=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true

# Authentication Configuration
VITE_JWT_SECRET=your-jwt-secret-key
VITE_TOKEN_STORAGE=localStorage
VITE_AUTO_REFRESH_TOKEN=true
VITE_REFRESH_THRESHOLD=300

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#64748b
VITE_ACCENT_COLOR=#10b981

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx
VITE_UPLOAD_CHUNK_SIZE=1048576

# Display Configuration
VITE_ITEMS_PER_PAGE=20
VITE_MAX_DISPLAY_ITEMS=100
VITE_TABLE_PAGE_SIZE_OPTIONS=[10,20,50,100]

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_VIRTUAL_SCROLLING=true
VITE_CACHE_DURATION=300000
VITE_REQUEST_TIMEOUT=30000

# External Services
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here
VITE_SENTRY_DSN=your-sentry-dsn-here

# Form Configuration
VITE_ENABLE_FORM_VALIDATION=true
VITE_AUTO_SAVE_INTERVAL=30000
VITE_ENABLE_AUTO_COMPLETE=true

# Notification Configuration
VITE_NOTIFICATION_DURATION=5000
VITE_ENABLE_DESKTOP_NOTIFICATIONS=false
VITE_NOTIFICATION_SOUND=true

# Dashboard Configuration
VITE_DEFAULT_DASHBOARD_VIEW=overview
VITE_ENABLE_CUSTOM_WIDGETS=true
VITE_WIDGET_REFRESH_INTERVAL=60000

# Export/Import Configuration
VITE_ENABLE_DATA_EXPORT=true
VITE_ENABLE_DATA_IMPORT=true
VITE_EXPORT_FORMATS=csv,xlsx,pdf
VITE_IMPORT_MAX_ROWS=10000

# Security Configuration
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_XSS_PROTECTION=true
VITE_ENABLE_CONTENT_SECURITY_POLICY=true

# Accessibility Configuration
VITE_ENABLE_SKIP_LINKS=true
VITE_ENABLE_ARIA_LABELS=true
VITE_ENABLE_KEYBOARD_NAVIGATION=true
VITE_ENABLE_HIGH_CONTRAST_MODE=false

# Localization Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_ENABLE_RTL_SUPPORT=false
VITE_CURRENCY_FORMAT=â‚¬{amount}
VITE_DATE_FORMAT=DD/MM/YYYY

# Analytics and Tracking
VITE_ENABLE_CLICK_TRACKING=true
VITE_ENABLE_PAGE_VIEW_TRACKING=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_TRACKING_CONSENT_REQUIRED=false

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_MEMORY_MONITORING=false

# Testing Configuration (for development only)
VITE_ENABLE_MOCK_API=true
VITE_MOCK_API_DELAY=1000
VITE_ENABLE_TEST_DATA_GENERATOR=true

# Build Configuration
VITE_BUILD_TARGET=esnext
VITE_ENABLE_SOURCE_MAPS=true
VITE_ENABLE_MINIMIZATION=true

# PWA Configuration
VITE_ENABLE_PWA=false
VITE_PWA_NAME=Fernando
VITE_PWA_SHORT_NAME=Accounting
VITE_PWA_THEME_COLOR=#3b82f6
VITE_PWA_BACKGROUND_COLOR=#ffffff